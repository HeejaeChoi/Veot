<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingLeft="10dp"
    android:id="@+id/layout_message_bot">

    <TextView
        android:id="@+id/text_name_message_bot"
        android:text="Veot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/text_message_bot"
        android:text="BOT MESSAGE"
        android:background="@drawable/message_box_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_name_message_bot"/>

    <!--<TextView
        android:id="@+id/text_message_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toRightOf="@+id/text_message_body"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body" />-->

</android.support.constraint.ConstraintLayout>